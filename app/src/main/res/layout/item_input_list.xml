<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_input_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2016/01/01 12:12"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_input_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_input_list_time"
        android:layout_marginLeft="10dp"
        android:background="@drawable/item_input_content_bg"
        android:text="这是一条发送的消息"
        android:textSize="14sp" />

</RelativeLayout>